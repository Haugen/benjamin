<?php
/**
 * Implements hook_install().
 */
function benjamin_install() {
  theme_enable(array('hatha'));
  theme_disable(array('bartik'));
  $variables = array(
    'admin_theme' => 'seven',
    'theme_default' => 'hatha',
    'node_admin_theme' => 1,
  );
  foreach ($variables as $key => $variable) {
    variable_set($key, $variable);
  }
}
